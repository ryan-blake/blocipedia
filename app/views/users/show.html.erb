<h1>
  <% cu = current_user.name   %>
  <%= cu.capitalize + "'s Wikis." %>
</h1>

<div class="row">
  <div class="col-md-8">
    <% @wikis.each do |wiki| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= link_to wiki.title, wiki %>
        </h4>
        <small>
          <%= wiki.body %>
        </small>
      </div>
    </div>
    <% end %>
  </div>
  <% if user_is_authorized_for_wikis? %>
  <div class="col-md-4">

    <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
  </div>
  <% end %>
</div>
